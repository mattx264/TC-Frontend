{
  "name": "Sitest",
  "version": "0.1",
  "manifest_version": 2,
  "description": "An extension which captures your site testing behavior for future automation.",
  "icons": {
    "128": "sitest128.png",
    "48": "sitest48.png",
    "16": "sitest16.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "chrome/main.css"
  ],
  "browser_action": {
    "default_title": "show tab inspector"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "chrome/requestMonitor.js",
        "chrome/xpathHelper.js",
        "chrome/main.js"
      ],
      "css": [
        "chrome/main.css"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ]
}